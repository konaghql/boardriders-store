{

  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "incremental": true,
    "baseUrl": "./",
    "outDir": "./public/",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "app/*": [
        "./app/*"
      ],
      "pages/*": [
        "./pages/*"
      ],
      "widgets/*": [
        "./widgets/*"
      ],
      "features/*": [
        "./features/*"
      ],
      "entities/*": [
        "./entities/*"
      ],
      "shared/*": [
        "./shared/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
